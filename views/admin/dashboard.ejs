    </div>
</section>

<%- include('../partials/admin-footer') %>

<style>
.stat-card {
    background: white;
    padding: 30px;
    border-radius: 16px;
    text-align: center;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    transition: transform 0.3s ease;
}

.stat-card:hover {
    transform: translateY(-5px);
}

.stat-icon {
    font-size: 3em;
    margin-bottom: 15px;
}

.stat-number {
    font-size: 2.5em;
    font-weight: bold;
    color: var(--act-seedling);
    margin-bottom: 10px;
}

.stat-label {
    color: #666;
    font-weight: 500;
}

.tool-card {
    background: white;
    padding: 40px;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.1);
    transition: transform 0.3s ease;
}

.tool-card:hover {
    transform: translateY(-8px);
}

.tool-icon {
    font-size: 4em;
    margin-bottom: 20px;
    text-align: center;
}

.tool-card h3 {
    color: var(--act-soil);
    font-size: 1.5em;
    margin-bottom: 15px;
    text-align: center;
}

.tool-card p {
    color: #666;
    line-height: 1.6;
    margin-bottom: 30px;
    text-align: center;
}

.tool-pages {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

.page-link {
    display: flex;
    align-items: center;
    padding: 12px 16px;
    background: var(--act-cream);
    border-radius: 10px;
    text-decoration: none;
    color: var(--act-soil);
    font-weight: 500;
    transition: all 0.3s ease;
}

.page-link:hover {
    background: var(--act-seedling);
    color: white;
    transform: translateX(5px);
}

.page-icon {
    margin-right: 10px;
}

.tool-actions {
    text-align: center;
}

.tool-btn {
    display: inline-block;
    padding: 15px 30px;
    border-radius: 12px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1em;
    transition: all 0.3s ease;
}

.tool-btn.primary {
    background: var(--act-seedling);
    color: white;
}

.tool-btn.primary:hover {
    background: #689f3c;
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(124, 179, 66, 0.3);
}

