<!-- Management Tools -->
<section style="background: var(--act-cream); padding: 80px 20px;">
    <div class="container">
        <h2 style="text-align: center; color: var(--act-soil); margin-bottom: 60px; font-size: 2.5em;">
            Content Cultivation Tools
        </h2>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 40px;">
            
            <!-- Content Management -->
            <div class="tool-card">
                <div class="tool-icon">üìù</div>
                <h3>Edit Page Content</h3>
                <p>Tend to the words that grow throughout the website‚Äîheroes, descriptions, and core messaging that reflects ACT's authentic voice.</p>
                <div class="tool-pages">
                    <% pages.forEach(page => { %>
                        <a href="/admin/content/<%= page %>" class="page-link">
                            <span class="page-icon">üå±</span>
                            <%= page.charAt(0).toUpperCase() + page.slice(1) %>
                        </a>
                    <% }) %>
                </div>
            </div>
            
            <!-- Photo Management -->
            <div class="tool-card">
                <div class="tool-icon">üì∏</div>
                <h3>Photo Harvest</h3>
                <p>Upload and manage photos that capture community wisdom in action. Smart positioning ensures faces are beautifully centered.</p>
                <div class="tool-actions">
                    <a href="/admin/photos" class="tool-btn primary">
                        üöú Manage Photos
                    </a>
                </div>
            </div>
            
            <!-- Video Management -->
            <div class="tool-card">
                <div class="tool-icon">üé•</div>
                <h3>Video Stories</h3>
                <p>Add video stories from the field‚ÄîYouTube, Vimeo, Descript links that share wisdom and amplify community voices.</p>
                <div class="tool-actions">
                    <a href="/admin/videos" class="tool-btn primary">
                        üå± Manage Videos
                    </a>
