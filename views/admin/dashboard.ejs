    }
}
</style>

<script>
document.addEventListener('DOMContentLoaded', async () => {
    // Load photo count
    try {
        const photosResponse = await fetch('/api/photos');
        const photos = await photosResponse.json();
        document.getElementById('photo-count').textContent = photos.length;
    } catch (error) {
        document.getElementById('photo-count').textContent = '0';
    }
    
    // Load video count
    try {
        const videosResponse = await fetch('/api/videos');
        const videos = await videosResponse.json();
        document.getElementById('video-count').textContent = videos.length;
    } catch (error) {
        document.getElementById('video-count').textContent = '0';
    }
});
</script> 