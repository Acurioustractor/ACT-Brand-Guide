# Notion Integration Configuration
# Get these from your Notion integration: https://www.notion.so/my-integrations

# Your Notion integration token (starts with secret_)
NOTION_TOKEN=secret_your_notion_integration_token_here

# Database ID for projects (the database where you store ACT projects)
# This is the long string of characters in your Notion database URL
NOTION_DATABASE_ID=your_projects_database_id_here

# Optional: Database ID for submissions (for people to submit project ideas)
NOTION_SUBMISSIONS_DATABASE_ID=your_submissions_database_id_here

# Server Configuration
PORT=3000

# Optional: Enable debug logging
DEBUG=true 